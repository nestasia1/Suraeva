#include <iostream>
#include <string>

int main()
{
    std::string word, wordCopy = "";
    std::cout << "Введите строку:\n";
    std::cin >> word;
    for (int i = 0; i < word.length(); i++)
    {
        wordCopy = wordCopy + word[i];
    };
    std::cout << "Копия строки: ";
    std::cout << wordCopy;
}
